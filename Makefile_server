COMPFILE := docker/compose_prod.yml
COMP := compose -f $(COMPFILE)
SERVER := htwserver-webapi
APPDIR := ~/api
SERVER_APP := $(SERVER):$(APPDIR)
RSYNC_COMMON := -rcv --exclude-from=.rsyncexclude

up:
	docker $(COMP) up -d

logs:
	docker $(COMP) logs -f

down:
	docker $(COMP) down

restart_web:
	docker $(COMP) restart web

build:
	docker $(COMP) build

create:
	docker $(COMP) create

enter:
	docker $(COMP) exec web /bin/bash

migrate:
	docker $(COMP) exec web python manage.py migrate

check:
	docker $(COMP) exec web python manage.py check --deploy
